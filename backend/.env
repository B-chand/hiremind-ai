# HireMind AI Backend Configuration
# Copy this to .env and update with your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hiremind_ai
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_for_hackathon_demo
JWT_EXPIRES_IN=7d

# AI API Keys (Add your actual keys here for production)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Email Configuration (Optional for demo)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
